{
  "name": "minimal-react-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "node start-app.js",
    "test": "vitest",
    "build": "vite build",
    "package": "npm run build && electron-packager . NOCList --platform=win32 --arch=x64 --overwrite --out=release --icon=public/icon.ico --asar --prune=true && node scripts/copy-sample-data.mjs --target=windows",
    "package:mac": "node scripts/package-mac.mjs"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "electron": "^27.0.0",
    "electron-log": "^5.4.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hot-toast": "^2.4.0",
    "react-window": "^1.8.11",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.0.0",
    "electron-packager": "^17.1.2",
    "jsdom": "^26.1.0",
    "vite": "^5.0.0",
    "vite-plugin-purgecss": "^0.2.13",
    "vitest": "^3.2.2"
  }
}
